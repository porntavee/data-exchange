{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"]
    },
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2020", // เปลี่ยน target เป็น ES2020
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2020", "dom"], // เปลี่ยน lib เป็น ES2020 และ DOM
    "module": "esnext"
  }
}
